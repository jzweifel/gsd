{
  "name": "gsd",
  "version": "1.0.0",
  "description": "Opinionated git hooks to guard your code base ğŸ¶",
  "scripts": {
    "lint": "",
    "lint:commit": "commitlint -e",
    "test": ""
  },
  "author": "Jacob Zweifel",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "husky": "^1.3.1"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run lint:commit -- $HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm test"
    }
  }
}
